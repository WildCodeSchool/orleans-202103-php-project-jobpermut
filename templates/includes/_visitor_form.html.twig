{% form_theme form 'bootstrap_4_layout.html.twig' %}

{{ form_start(form) }}
<div class = "visitorForm text-light bg-dark rounded-5 col-12 col-md-3 p-4">
    <h2 class = "text-warning text-center">Evaluez votre trajet</h2>
    {% for messages in app.flashes('geocode') %}
        {% for message in messages %}
            <div class="alert alert-warning">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}
    <div class="col-12 mt-4">
        {{ form_label(form.homeCity, 'Votre Ville de Domicile') }}
        {{ form_widget(form.homeCity, {
            'attr': {
                'id': 'homeCity',
                'placeholder': 'Meaux',
                'class': 'form-control shadow-sm bg-white rounded mt-2'
            }
        }) }}
    </div>
    <div class="col-12 mt-4">
        {{ form_label(form.workCity, 'Votre Ville de Travail') }}
        {{ form_widget(form.workCity, {
            'attr': {
                'id': 'workCity',
                'placeholder': 'Paris',
                'class': 'form-control shadow-sm bg-white rounded mt-2'
            }
        }) }}
    </div>
    <button class = "btn btn-warning form-check col-12 mt-4 rounded">Evaluez!</button>
</div>
{{ form_end(form) }}