{% extends 'layout.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('permutmatch') }}
{% endblock %}

{% block title %}
    {{ parent() }}
    - Vos Permut Matchs
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <main class="container py-5 permutmatch">
        <header class="mb-5">
            <h1 class="h1 text-center text-dark">Vos Permut Matchs</h1>
            <h2 class="h2 text-center text-dark">Retrouvez vos différents Permut Matchs</h2>
        </header>
        <div>
            {% if matchs %}
                {% for match in matchs %}
                    <div class="permut-card mb-3 d-flex flex-row align-items-center justify-content-between">
                        <div class="d-flex flex-row align-items-center text-white">
                            <img class="rounded-circle me-4" src="https://upload.wikimedia.org/wikipedia/commons/7/7c/Profile_avatar_placeholder_large.png" alt="avatar-user">
                            <div class="title-card">
                                <div class="d-flex flex-row">
                                    <h3 class="h2 mb-1 text-warning">{{ match.userLiked.username }}</h3>
                                </div>
                                <h4 class="h3 text-truncate mb-2">
                                    {% if match.userLiked.registeredUser.rome is defined %}
                                        {{ match.userLiked.registeredUser.rome.name }}
                                    {% else %}
                                        Secteur d'activité non renseigné
                                    {% endif %}
                                </h4>
                                <div class="d-flex flex-md-row flex-column pt-1">
                                    <h5 class="mb-0 me-3">
                                        <i class="fas fa-briefcase me-1 text-info"></i>
                                        {{ match.userLiked.registeredUser.city ?? "Lieu de domicile non renseignée" }}
                                    </h5>
                                    <h5 class="mb-0">
                                        <i class="fas fa-home me-1 text-info"></i>
                                        {{ match.userLiked.registeredUser.cityJob ?? "Lieu de travail non renseignée" }}
                                    </h5>
                                </div>
                            </div>
                        </div>
                        <div class="d-flex flex-row align-items-center mt-md-0 mt-4">
                            <a href="{{ path("profile_show", {username: match.userLiked.registeredUser.user.username}) }}" class="btn btn-warning ms-3">Voir le profil</a>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle me-3"></i>Vous n'avez pas encore eu de match avec un utilisateur
                </div>
            {% endif %}

        </div>
    </main>
{% endblock %}
