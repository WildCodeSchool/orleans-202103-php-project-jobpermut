{% extends 'layout.html.twig' %}

{% block title %}JobPermut Admin
{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('admin') }}
{% endblock %}

{% block body %}

    <div class="wrapper mt-5 mt-sm-0 text-center">
        <div class="page-title">
            <h1 class="h1">Administration</h1>
        </div>
        <div class="container-fluid admin-container">
            <div class="row align-items-center w-100 card-row">

                <div class="col-md-5 col-lg-3 p-2 mx-auto">
                    <div class="card h-100">
                        <div class="card-body">
                            <h2 class="card-title d-flex justify-content-center">
                                <i class="fas fa-users logoAdmin"></i>
                            </h2>
                            <p class="card-text description">Ajouter, supprimer ou consulter le profil de vos utilisateurs.</p>
                            <div class="card-link d-flex justify-content-center">
                                <a href="#" class="btn btn-admin">Gestion des utilisateurs</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-5 col-lg-3 p-2 mx-auto">
                    <div class="card h-100">
                        <div class="card-body">
                            <h2 class="card-title d-flex justify-content-center">
                                <i class="fas fa-building logoAdmin"></i>
                            </h2>
                            <p class="card-text description">Ajouter, supprimer ou consulter le profil de vos entreprises.</p>
                            <div class="card-link d-flex justify-content-center">
                                <a href="#" class="btn btn-admin">Gestion des entreprises</a>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-5 col-lg-3 p-2 mx-auto">
                    <div class="card h-100">
                        <div class="card-body">
                            <h2 class="card-title d-flex justify-content-center">
                                <i class="fas fa-comment-dots logoAdmin"></i>
                            </h2>
                            <p class="card-text description">Supprimer ou consulter les commentaires.</p>
                            <div class="card-link d-flex justify-content-center">
                                <a href="#" class="btn btn-admin">Gestion des commentaires</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row align-items-center w-100 card-row">
                <div class="col-md-5 col-lg-3 p-2 mx-auto">
                    <div class="card h-100">
                        <div class="card-body">
                            <h2 class="card-title d-flex justify-content-center">
                                <i class="fas fa-envelope-open-text logoAdmin"></i>
                            </h2>
                            <p class="card-text description">Envoyer des mails a tous les membres inscrits.</p>
                            <div class="card-link d-flex justify-content-center">
                                <a href="#" class="btn btn btn-admin">Envoi de mails</a>
                            </div>
                        </div>
                    </div>
                </div>

                {% if is_granted('ROLE_SUPERADMIN') %}
                    <div class="col-md-5 col-lg-3 p-2 mx-auto">
                        <div class="card h-100">
                            <div class="card-body">
                                <h2 class="card-title d-flex justify-content-center">
                                    <i class="fas fa-users-cog logoAdmin"></i>
                                </h2>
                                <p class="card-text description">Cr√©er un compte administrateurs.</p>
                                <div class="card-link d-flex justify-content-center">
                                    <a href="#" class="btn btn btn-admin">Ajouter des administrateurs</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endif %}

            </div>
        </div>
    </div>

{% endblock %}
